<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.space.mapper.EmployeeMapper">


    <!--添加员工分类-->
    <insert id="addStaffType" parameterType="com.space.entity.StaffType">
        insert into shop_staff_type(shop_mark,staff_type_name,staff_type_commission,staff_type_desc,staff_type_number)
        values (#{shopMark},#{staffTypeName},#{staffTypeCommission},#{staffTypeDesc},#{staffTypeNumber})
    </insert>

    <!--查看是否同名分类-->
    <select id="checkStaffType" resultType="Integer">
        select count(*) from shop_staff_type where shop_mark=#{shopMark} and staff_type_name=#{staffTypeName}
    </select>

    <!--删除员工分类-->
    <delete id="deleteStaffType">
        delete from shop_staff_type where shop_mark=#{shopMark} and staff_type_Name=#{staffTypeName}
    </delete>

    <!--添加员工-->
    <insert id="addStaff"  useGeneratedKeys="true" keyProperty="shopId">
        insert into shop_staff()
    </insert>
</mapper>