<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.space.mapper.CommodityCategoryMapper">

    <resultMap id="CommodityCategoryData" type="com.space.entity.CommodityCategory">
        <id column="id" property="id" />
        <result column="parentId" property="parentId" />
        <result column="name" property="name" />
        <result column="categoryDesc" property="categoryDesc" />
        <result column="modityDate" property="modityDate" />
        <result column="shopId" property="shopId" />
    </resultMap>

  <!--  &lt;!&ndash;添加用户&ndash;&gt;
    <insert id="addUser" parameterType="com.space.entity.User">
        insert into shop_user(user_name,shop_mark,user_phone,user_wechat)
        values (#{userName},#{shopMark},#{userPhone},#{userWechat})
    </insert>
-->

    <!--查询商品分类-->
    <select id="GetData" resultMap="CommodityCategoryData">
        select * from commoditycategory_info where 1=1
        <if test="shopId>0">
            AND shopId = #{shopId}
        </if>

    </select>

</mapper>